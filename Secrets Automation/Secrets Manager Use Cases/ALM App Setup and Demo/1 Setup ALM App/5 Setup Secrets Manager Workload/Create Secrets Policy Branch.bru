meta {
  name: Create Secrets Policy Branch
  type: http
  seq: 1
}

post {
  url: https://{{IspSubDomain}}.secretsmgr.cyberark.cloud/api/policies/conjur/policy/data
  body: text
  auth: none
}

headers {
  Authorization: Token token="{{conjurSessionToken}}"
}

body:text {
  # applied to: data
  ---
  # Append policy 
  
  - !policy
    id: {{UseCaseAlmAppName}}
    owner: !group /{{UseCaseAlmAppName}}-admins
    
}
